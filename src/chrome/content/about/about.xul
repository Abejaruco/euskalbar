<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://euskalbar/content/about/about.css" type="text/css"?>

<!DOCTYPE dialog SYSTEM "chrome://euskalbar/locale/euskalbar.dtd">

<dialog buttons="accept"
        id="euskalbar-about-dialog"
        title="&euskalbar.about.title;"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <script type="application/x-javascript" src="chrome://euskalbar/content/about/about.js"/>

    <vbox id="euskalbar-about-details">
        <hbox>
            <vbox>
                <hbox>
                    <description value="&euskalbar.name;" class="name"/>
                    <description class="name">1.9</description>
                </hbox>
                <description value="&euskalbar.about.author;" class="title"/>
                <description>Juanan Pereira, Asier Sarasua Garmendia</description>
            </vbox>
            <spacer flex="1"/>
            <vbox>
                <image src="chrome://euskalbar/skin/euskalbar32.png"/>
                <spacer flex="1"/>
            </vbox>
        </hbox>
        <description value="&euskalbar.about.home.page;" class="title"/>
        <description onclick="euskalbar_visitHomePage('http://www.interneteuskadi.org/euskalbar',true)" class="url">http://www.interneteuskadi.org/euskalbar</description>
    </vbox>
    <separator class="groove" id="euskalbar-about-separator"/>
</dialog>
